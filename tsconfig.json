{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "plugins": [{
      "name": "typescript-styled-plugin"
    }],
    "baseUrl": ".",
    "paths": {
      "components/*": ["components/*"],
      "layouts/*": ["layouts/*"],
      "pages/*": ["pages/*"],
      "theme/*": ["theme/*"],
      "utils/*": ["utils/*"],
      "ui/*": ["ui/*"],
      "lib/*": ["lib/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2017", "dom", "esnext"]
  },
  "include": ["components/*", "layouts/*", "pages/*", "theme/*", "utils/*", "ui/*", "lib/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
