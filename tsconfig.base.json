{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@dream/storybook": ["libs/storybook/src/index.ts"],
      "@dream/ui": ["libs/ui/src/index.ts"],
      "@dream/ui/*": ["libs/ui/src/lib/*"],
      "@dream/prisma": ["libs/prisma/src/index.ts"],
      "@dream/containers/*": ["libs/containers/src/*"],
      "@dream/utils/*": ["libs/utils/src/lib/*"],
      "@dream/chat": ["libs/chat/src/index.ts"],
      "@dream/chat-api": ["libs/chat-api/src/index.ts"],
      "@dream/community": ["libs/community/src/index.ts"],
      "@dream/auth-api": ["libs/auth-api/src/index.ts"],
      "@dream/user-api": ["libs/user-api/src/index.ts"],
      "@dream/connection-api": ["libs/connection-api/src/index.ts"],
      "@dream/pepega-ui": ["libs/pepega-ui/src/index.ts"],
      "@dream/pepega-ui/*": ["libs/pepega-ui/src/lib/*"],
      "@dream/components/*": ["libs/components/src/*"],
      "@dream/icons/*": ["libs/icons/src/*"],
      "@dream/layouts/*": ["libs/layouts/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
